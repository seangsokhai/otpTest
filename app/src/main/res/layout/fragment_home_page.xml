<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.HomePage"
    android:background="@color/white"
    >



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="16sp"
                android:id="@+id/top_bar_home_page"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_alignParentStart="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginStart="16sp"
                            android:src="@drawable/ic_location_icon"
                            app:tint="@color/pink" />
                        <androidx.cardview.widget.CardView
                            android:id="@+id/change_mall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardElevation="0dp"
                            android:layout_gravity="center"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:textStyle="bold"
                                    android:textColor="@color/pink"
                                    android:textSize="15sp"
                                    android:layout_marginLeft="10sp"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="AEON MALL SEN SOK CITY"/>
                                <ImageView
                                    android:layout_marginLeft="4sp"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_arrow_down"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="16sp"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:padding="8sp"
                            android:background="@drawable/bg_arrowback"
                            android:src="@drawable/ic_search"
                            app:tint="@color/black" />

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginStart="10sp"
                            android:src="@drawable/ic_bag_icon"
                            />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/card_homePage"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/top_bar_home_page"
                >
                <androidx.cardview.widget.CardView
                    android:layout_marginHorizontal="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="388dp"
                    android:layout_marginTop="25dp"
                    app:cardElevation="1sp"
                    app:cardCornerRadius="8sp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/viewpager_homePage"
                            android:layout_width="match_parent"
                            android:layout_height="388dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="16sp">

                            <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
                                android:id="@+id/dot_indicator_homePage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                app:dotsColor="@color/pink"
                                app:dotsCornerRadius="6dp"
                                app:dotsSize="6dp"
                                app:dotsSpacing="4dp"
                                app:dotsStrokeColor="@color/white"
                                app:dotsStrokeWidth="3dp" />
                        </RelativeLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        app:layout_constraintTop_toBottomOf="@+id/top_bar_home_page"
                        android:layout_width="match_parent"
                        android:layout_height="116dp"
                        app:cardElevation="3sp"
                        app:cardCornerRadius="8sp"
                        android:layout_marginBottom="5sp"
                        android:layout_marginStart="16sp"
                        android:layout_marginEnd="5sp"
                        >
                        <LinearLayout
                            android:layout_margin="5sp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="4sp"
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                app:cardElevation="0sp"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/shopnow"
                                    />
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Shop Now"
                                />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        app:layout_constraintTop_toBottomOf="@+id/top_bar_home_page"
                        android:layout_width="match_parent"
                        android:layout_height="116dp"
                        app:cardElevation="3sp"
                        app:cardCornerRadius="4sp"
                        android:layout_marginStart="5sp"
                        android:layout_marginEnd="16sp"
                        >
                        <LinearLayout
                            android:layout_margin="5sp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="4sp"
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                app:cardElevation="0sp"
                                >
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/discount"
                                    />
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Discount"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginHorizontal="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:padding="5sp"
                            android:background="@drawable/bg_arrowback"
                            android:src="@drawable/ic_promotion"
                            />
                        <TextView
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Promotion"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:padding="8sp"
                            android:background="@drawable/bg_arrowback"
                            android:src="@drawable/ic_voucher"
                            />
                        <TextView
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="E-voucher"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:padding="5sp"
                            android:background="@drawable/bg_arrowback"
                            android:src="@drawable/ic_floor_map"
                            />
                        <TextView
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Floor Map"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:padding="5sp"
                            android:background="@drawable/bg_arrowback"
                            android:src="@drawable/ic_more_horiz"
                            app:tint="@color/pink" />
                        <TextView
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See All"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:background="@color/grey" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/shopByCategory"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20sp"
                    android:layout_marginHorizontal="16sp"
                    >
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="Shop by brand Categories"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />
                    <ImageView
                        android:layout_alignParentEnd="true"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_arrow_right" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="15sp"
                    android:layout_marginHorizontal="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardElevation="0sp"
                        app:cardCornerRadius="6sp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/fashion" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        app:cardElevation="0sp"
                        app:cardCornerRadius="6sp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/beauty" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="20sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginHorizontal="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardElevation="0sp"
                        app:cardCornerRadius="6sp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/electronic" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        app:cardElevation="0sp"
                        app:cardCornerRadius="6sp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/stationary" />
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        app:cardElevation="0sp"
                        app:cardCornerRadius="6sp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/homepic" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:background="@color/grey"/>
            </LinearLayout>

            <TextView
                android:layout_marginStart="16sp"
                android:layout_marginTop="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop by Store"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="15sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="100sp"
                android:layout_marginHorizontal="16sp"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_store"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    tools:listitem="@layout/store_elememts"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>