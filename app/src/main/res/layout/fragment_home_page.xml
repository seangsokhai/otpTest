<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".HomePage"
android:background="@color/white"
    >

<LinearLayout
    android:id="@+id/arrowHome"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginHorizontal="16sp"
    >
    <ImageView
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back"
        android:padding="10sp"

        android:background="@drawable/bg_arrowback"
        />
</LinearLayout>
<LinearLayout
    android:id="@+id/top"
    android:layout_marginHorizontal="16sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintTop_toBottomOf="@id/arrowHome"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">
    <ImageView
        android:layout_marginTop="25sp"
        android:layout_width="66sp"
        android:layout_height="66sp"
        android:src="@drawable/ic_baseline_location_on_24"
        android:padding="8dp"
        android:background="@drawable/bg_arrowback"
        app:tint="@color/pink" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select MALL"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20sp"/>
    <LinearLayout
        android:id="@+id/txtMall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can change this later in the "
            android:textSize="12sp"
            android:textStyle="normal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='"HomeScreen"'
            android:textSize="12sp"
            android:textStyle="normal"
            />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/card_item"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:cardElevation="3sp"
            app:cardCornerRadius="15sp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="160sp"
                android:src="@drawable/mall1"
                />
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginTop="99dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AEON MALL"
                    android:textColor="@color/pink"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phnom Penh"
                    android:textColor="@color/pink"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160sp"
            android:src="@drawable/bg_mall"

            />

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginTop="99dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AEON MALL"
                android:textColor="@color/pink"
                android:textSize="17sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sen Sok City"
                android:textColor="@color/pink"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160sp"
            android:src="@drawable/bg_mall" />

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginTop="99dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AEON MALL"
                android:textColor="@color/pink"
                android:textSize="17sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mean Chey"
                android:textColor="@color/pink"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>


</LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>