<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.HomePage"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_marginTop="16sp"
        android:id="@+id/top_bar_home_page"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_alignParentStart="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="16sp"
                    android:padding="5sp"
                    android:background="@drawable/bg_pink_for_icon"
                    android:src="@drawable/ic_location"
                    app:tint="@color/pink" />
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/pink"
                    android:textSize="15sp"
                    android:layout_marginLeft="10sp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AEON MALL SEN SOK CITY"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16sp"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="8sp"
                    android:background="@drawable/bg_arrowback"
                    android:src="@drawable/ic_search"
                    app:tint="@color/black" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="10sp"
                    android:padding="8sp"
                    android:background="@drawable/bg_arrowback"
                    android:src="@drawable/ic_shopping_cart"
                    app:tint="@color/black" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/card_homePage"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/top_bar_home_page"
        >
        <androidx.cardview.widget.CardView
            android:layout_marginHorizontal="16sp"
            android:layout_width="match_parent"
            android:layout_height="388dp"
            android:layout_marginTop="25dp"
            app:cardElevation="1sp"
            app:cardCornerRadius="8sp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewpager_homePage"
                    android:layout_width="match_parent"
                    android:layout_height="388dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16sp">

                    <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
                        android:id="@+id/dot_indicator_homePage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        app:dotsColor="@color/pink"
                        app:dotsCornerRadius="6dp"
                        app:dotsSize="6dp"
                        app:dotsSpacing="4dp"
                        app:dotsStrokeColor="@color/white"
                        app:dotsStrokeWidth="3dp" />
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginHorizontal="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@+id/top_bar_home_page"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                app:cardElevation="3sp"
                app:cardCornerRadius="8sp"
                android:layout_marginBottom="5sp"
                >
                <LinearLayout
                    android:layout_margin="5sp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="4sp"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        app:cardElevation="0sp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/mall2"
                            />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Shop Now"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@+id/top_bar_home_page"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                app:cardElevation="3sp"
                app:cardCornerRadius="4sp"
                >
                <LinearLayout
                    android:layout_margin="5sp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="4sp"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        app:cardElevation="0sp"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/mall1"
                            />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Discount"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="16sp"
            android:layout_marginTop="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="5sp"
                    android:background="@drawable/bg_arrowback"
                    android:src="@drawable/ic_baseline_speaker_phone_24"
                    app:tint="#FFDC61" />
                <TextView
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Promotion"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="8sp"
                    android:background="@drawable/bg_arrowback"
                    android:src="@drawable/ic_brand"
                    app:tint="#4CAF50" />
                <TextView
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-voucher"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="5sp"
                    android:background="@drawable/bg_arrowback"
                    android:src="@drawable/ic_location"
                    app:tint="#E86D46" />
                <TextView
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Floor Map"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="5sp"
                    android:background="@drawable/bg_arrowback"
                    android:src="@drawable/ic_more_horiz"
                    app:tint="@color/pink" />
                <TextView
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See All"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="@color/grey" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>